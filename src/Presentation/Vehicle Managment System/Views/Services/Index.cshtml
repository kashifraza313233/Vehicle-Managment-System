@model IEnumerable<VM.Bussiness.Models.AddServicesModel>
@{
    ViewData["Title"] = "Index";
}
<h1>All Services</h1>
<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table table-active table-bordered table-responsive">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoverImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SId)
                </td>
                <td>
                  @*  @Html.DisplayFor(modelItem => item.CoverImage)*@
                    <img src="@Url.Content(item.ImagePath)" height="80" width="80">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {  id=item.SId  },new{@class="btn btn-primary"}) |
                    @*    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                    @Html.ActionLink("Delete", "Delete", new {  id=item.SId  },new{@class="btn btn-danger"})
                </td>
            </tr>
        }
    </tbody>
</table>
